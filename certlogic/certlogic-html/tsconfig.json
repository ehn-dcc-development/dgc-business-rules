{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "dist",
    "jsx": "react",
    "lib": [ "dom", "ES2020" ],
    "module": "commonjs",
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "include": [
    "src/**/*.ts*"
  ],
  "exclude": [
    "node_modules"
  ]
}
